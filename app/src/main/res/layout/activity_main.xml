<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.s07150830.dialog.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/charactor" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字符选择对话框"
        android:onClick="characterpickerdialog"
        android:layout_below="@+id/charactor"
        android:layout_alignParentStart="true"
        android:id="@+id/button" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uidate"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期选择对话框"
        android:onClick="datepickerdialog"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:id="@+id/button2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uitime"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间选择对话框"
        android:onClick="timepickerdialog"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:id="@+id/button3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度对话框"
        android:onClick="progressdialog"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/charactor" />
</RelativeLayout>
